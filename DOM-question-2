  <body>
    <h2>Error Heading 1</h2>
    <h2>Success Another Heading</h2>
    <h2>Error Heading 2</h2>

    <script>
      let allH1 = document.querySelectorAll("h2");

      allH1.forEach((element) => {
        if (element.textContent.includes("Error")) {
          element.style.color = "red";
        } else {
          element.style.color = "green";
        }
      });
    </script>
  </body>
